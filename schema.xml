<database name="default" defaultIdMethod="native"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd"
          namespace=""
        >
    <table name="historia" phpName="Historia">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="id_persona" type="integer" required="true"/>
        <foreign-key foreignTable="personas">
            <reference local="id_persona" foreign="id"/>
        </foreign-key>
    </table>

    <table name="sexo" phpName="Sexo">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="sexo" type="varchar" size="9" required="true"/>
    </table>

    <table name="respuestas" phpName="Respuestas">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="respuesta" type="varchar" size="9" required="true"/>
    </table>

    <table name="personas" phpName="Personas">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="nombres" type="varchar" size="128" required="true"/>
        <column name="apellidos" type="varchar" size="128" required="true"/>
        <column name="cedula" type="varchar" size="128" required="true"/>
        <column name="nacimiento" type="varchar" size="128" required="true"/>
        <column name="direccion" type="varchar" size="128" required="true"/>
        <column name="profesion" type="varchar" size="128" required="true"/>
        <column name="Lugar_nacimiento" type="varchar" size="128" required="true"/>
        <column name="registro" type="varchar" size="128" required="true"/>
        <column name="id_sexo" type="integer" required="true"/>
        <column name="id_tipo_cedula" type="integer" required="true"/>
        <foreign-key foreignTable="sexo">
            <reference local="id_sexo" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="tipo_cedula">
            <reference local="id_tipo_cedula" foreign="id"/>
        </foreign-key>
    </table>
    <table name="tipo_cedula" phpName="Tipo_cedula">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="tipo" type="varchar" size="1" required="true"/>
    </table>
</database>
